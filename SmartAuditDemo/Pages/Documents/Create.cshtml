@page
@model SmartAuditDemo.Pages.Documents.CreateModel
@{
    ViewData["Title"] = "ایجاد سند جدید";
}

<div class="page-header">
    <h1 class="page-title">ایجاد سند جدید</h1>
    <p class="page-description">اطلاعات سند جدید را وارد کنید</p>
</div>

<div class="card">
    <div class="card-body">
        <form method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Input.Title" class="form-label">عنوان سند <span class="text-danger">*</span></label>
                    <input asp-for="Input.Title" class="form-control" required />
                    <span asp-validation-for="Input.Title" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Input.DocumentType" class="form-label">نوع سند <span class="text-danger">*</span></label>
                    <select asp-for="Input.DocumentType" class="form-select" required>
                        <option value="">انتخاب کنید</option>
                        <option value="1">سند حسابداری</option>
                        <option value="2">فاکتور یا صورتحساب</option>
                        <option value="3">قرارداد</option>
                        <option value="4">مکاتبات</option>
                        <option value="5">گزارشات</option>
                        <option value="6">دفاتر</option>
                        <option value="7">سایر</option>
                    </select>
                    <span asp-validation-for="Input.DocumentType" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="File" class="form-label">فایل <span class="text-danger">*</span></label>
                <input type="file" asp-for="File" class="form-control" accept=".pdf,.doc,.docx,.xls,.xlsx,.jpg,.jpeg,.png,.gif" required />
                <small class="form-text text-muted">فایل‌های مجاز: PDF, Word, Excel, Image (حداکثر 10MB)</small>
                <span asp-validation-for="File" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">ذخیره</button>
                <a asp-page="./Index" class="btn btn-secondary">انصراف</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

