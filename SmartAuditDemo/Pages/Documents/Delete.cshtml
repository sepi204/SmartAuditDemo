@page
@model SmartAuditDemo.Pages.Documents.DeleteModel
@{
    ViewData["Title"] = "حذف سند";
}

<div class="page-header">
    <h1 class="page-title">حذف سند</h1>
    <p class="page-description">آیا از حذف این سند اطمینان دارید؟</p>
</div>

@if (Model.Document == null)
{
    <div class="alert alert-danger">
        سند یافت نشد.
    </div>
    <a asp-page="./Index" class="btn btn-secondary">بازگشت به لیست</a>
}
else
{
    <div class="card">
        <div class="card-body">
            <div class="alert alert-warning">
                <strong>هشدار!</strong> این عمل قابل بازگشت نیست و فایل فیزیکی نیز حذف خواهد شد.
            </div>

            <dl class="row">
                <dt class="col-sm-3">عنوان سند:</dt>
                <dd class="col-sm-9">@Model.Document.Title</dd>

                <dt class="col-sm-3">نوع سند:</dt>
                <dd class="col-sm-9">@Model.Document.DocumentTypeName</dd>

                <dt class="col-sm-3">اکستنشن:</dt>
                <dd class="col-sm-9"><span class="badge bg-info">@Model.Document.Extension.ToUpper()</span></dd>

                <dt class="col-sm-3">حجم:</dt>
                <dd class="col-sm-9">@Model.Document.SizeFormatted</dd>

                <dt class="col-sm-3">تاریخ ثبت:</dt>
                <dd class="col-sm-9">@Model.Document.CreatedAt.ToString("yyyy/MM/dd HH:mm")</dd>
            </dl>

            <form method="post">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger">حذف</button>
                    <a asp-page="./Index" class="btn btn-secondary">انصراف</a>
                </div>
            </form>
        </div>
    </div>
}

