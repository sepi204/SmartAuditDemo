@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "بازیابی رمز عبور";
    Layout = "_AuthLayout";
}

<form method="post" class="needs-validation" novalidate>
    <div class="mb-4">
        <p class="text-muted">رمز عبور جدید خود را وارد کنید.</p>
    </div>

    <input asp-for="Input.Token" type="hidden" />
    <input asp-for="Input.Email" type="hidden" />

    <div class="mb-3">
        <label asp-for="Input.Password" class="form-label">رمز عبور جدید</label>
        <input asp-for="Input.Password" class="form-control" type="password" required />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.ConfirmPassword" class="form-label">تکرار رمز عبور جدید</label>
        <input asp-for="Input.ConfirmPassword" class="form-control" type="password" required />
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>

    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <button type="submit" class="btn btn-primary w-100 mb-3">تغییر رمز عبور</button>

    <div class="text-center">
        <a asp-page="./Login" class="text-decoration-none">بازگشت به صفحه ورود</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



