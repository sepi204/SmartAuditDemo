@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "فراموشی رمز عبور";
    Layout = "_AuthLayout";
}

<form method="post" class="needs-validation" novalidate>
    <div class="mb-4">
        <p class="text-muted">لطفاً ایمیل خود را وارد کنید. لینک بازیابی رمز عبور برای شما ارسال خواهد شد.</p>
    </div>

    <div class="mb-3">
        <label asp-for="Input.Email" class="form-label">ایمیل</label>
        <input asp-for="Input.Email" class="form-control" type="email" required />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <button type="submit" class="btn btn-primary w-100 mb-3">ارسال لینک بازیابی</button>

    <div class="text-center">
        <a asp-page="./Login" class="text-decoration-none">بازگشت به صفحه ورود</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



